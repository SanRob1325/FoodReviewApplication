<%= image_tag @restaurant.image.url(:medium) %>>
<p>
  <strong>Restaurant: </strong>
  <%= @restaurant.name %>
</p>
<p>
  <strong>Comment: </strong>
  <%= @restaurant.comment %>
</p>
<p>
  <strong>Estimated waiting time: </strong>
  <%= @restaurant.waiting_time_estimate %>
</p>
<p>
  <strong>Rating: </strong>
  <%= @restaurant.rating %>
</p>
<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
